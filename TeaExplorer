import java.util.Scanner;
import java.lang.Math;

/** The first version of the Tea Explorer game,
 * which encourages players to buy virtual tea and teapots.
 * @author  SJ McKinlay
 * @version 0.0002 14th July, 2021
 *
 */

public class TeaExplorer {

    // The classic "main" method. It opens a scanner for
    // player input, and calls on the getFunds method.
    public static void main(String[] args) {

        // First, we ask the hobbyist how much money they are willing to spend,
        // and store that as a double "Funds."
        Scanner tConsole = new Scanner(System.in);
        double initFunds;
        String strFunds;
        int storeChoice;


        initFunds = getFunds(tConsole);
        strFunds = toDollars(initFunds);

        double currentFunds = initFunds;

        while (currentFunds > 0.00000001) {
        storeChoice = whichStore(tConsole);
        System.out.println("You chose store number " + storeChoice + " from which to purchase your tea.");
        currentFunds = (currentFunds - 10);
        }

        System.out.print("You have " + strFunds);
        System.out.println(" left to spend. Happy shopping!");
    }

    // This method accepts user input on how much money they have,
    // then prints the amount.
    public static double getFunds(Scanner toConsole) {
        double toFunds;
        System.out.println("How much money do you have to spend?");
        toFunds = Math.abs(toConsole.nextDouble());
        return(toFunds);
    }

    // This method takes in a double, and outputs a dollar amount.
    public static String toDollars (double taFunds) {
        String straFunds = "$";
        straFunds = (straFunds + String.format("%.2f", taFunds));
        return(straFunds);

    }

    public static int whichStore (Scanner whichConsole) {
        int whichOne;
        System.out.println("Which store do you want to look at?");
        whichOne = Math.abs(whichConsole.nextInt());
        return(whichOne);
    }

}
